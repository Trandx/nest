{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "target": "ESNext",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@app/utils/*": [
        "libs/utils/*"
      ],
      "@app/broker": [
        "libs/broker/src"
      ],
      "@app/broker/*": [
        "libs/broker/src/*"
      ],
      "@app/database": [
        "libs/database/src"
      ],
      "@app/database/*": [
        "libs/database/src/*"
      ],
      "@app/redis": [
        "libs/redis/src"
      ],
      "@app/redis/*": [
        "libs/redis/src/*"
      ],
      "@app/mailer": [
        "libs/mailer/src"
      ],
      "@app/mailer/*": [
        "libs/mailer/src/*"
      ],
      "@app/minio": [
        "libs/minio/src"
      ],
      "@app/minio/*": [
        "libs/minio/src/*"
      ],
      "@app/worker": [
        "libs/worker/src"
      ],
      "@app/worker/*": [
        "libs/worker/src/*"
      ],
      "@app/key-generator": [
        "libs/key-generator/src"
      ],
      "@app/key-generator/*": [
        "libs/key-generator/src/*"
      ]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": [
      "./node_modules/@types",
      "src/common/@types"
    ]
  },
  "include": [
    "src/**/*",
    "libs/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}